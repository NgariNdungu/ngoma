<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:colorBackground">@color/secondaryDarkColor</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseTextStyle" parent="AppTheme">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleStyle" parent="BaseTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ArtistStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">monospace</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AlbumArtStyle" parent="AppTheme">
        <item name="android:minHeight">96dp</item>
        <item name="android:minWidth">96dp</item>
    </style>

    <style name="LabelStyle" parent="TitleStyle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
